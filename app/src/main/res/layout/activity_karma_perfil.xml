<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Foto de KarmaProducciones -->
    <ImageView
        android:id="@+id/fotoImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/smaopxea" /> <!-- Aquí puedes definir la imagen de KarmaProducciones -->

    <!-- Nombre de KarmaProducciones -->
    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fotoImageView"
        android:layout_centerHorizontal="true"
        android:text="KarmaProducciones"
        android:textSize="20sp"
        android:layout_marginTop="16dp" />

    <!-- Correo de KarmaProducciones -->
    <TextView
        android:id="@+id/correoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreTextView"
        android:layout_centerHorizontal="true"
        android:text="Correo: contacto@karmaproducciones.com"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <!-- Número de Teléfono de KarmaProducciones -->
    <TextView
        android:id="@+id/telefonoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/correoTextView"
        android:layout_centerHorizontal="true"
        android:text="Número de Teléfono: +1-123-456-7890"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <!-- Descripción de KarmaProducciones -->
    <TextView
        android:id="@+id/descripcionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/telefonoTextView"
        android:layout_marginTop="80dp"
        android:padding="16dp"
        android:text="Productora especializada en producciones cinematográficas y televisivas. Comprometidos con la calidad y la creatividad."
        android:textSize="16sp" />

</RelativeLayout>
